<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:contentDescription="shopping cart"
        android:gravity="center"
        android:src="@drawable/ic_add_shopping_cart_white_36dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shopping_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/shopping_cart"
        android:layout_alignTop="@id/shopping_cart"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_square"
        android:gravity="center"
        android:minWidth="17sp"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@null"
        android:textColor="#ffffffff"
        android:textSize="12sp" />
</RelativeLayout>